<!-- body -->
<div class="main-section">
  <div class="custom-card">
    <form
      action="/webVersion/result"
      method="post"
      autocomplete="off"
      name="availablePathsForm"
      onsubmit="select()"
      class="needs-validation"
      novalidate
    >
      <h1>حدد وجهتك</h1>
      <!-- location -->
      <div class="input-group mb-3" style="width: 300px">
        <input
          aria-label="Recipient's username"
          aria-describedby="button-addon2"
          id="myInput"
          type="text"
          name="Location"
          list="Location"
          placeholder="نقطة الانطلاق"
          class="form-control"
          required
        />
        <div class="input-group-append">
          <button
            class="btn btn-outline-secondary"
            type="button"
            id="current-location"
          >
            <i class="fa-solid fa-location-dot"></i>
          </button>
        </div>
        <div class="invalid-feedback">برجاء تحديد نقطة الانطلاق</div>
      </div>
      <!-- end Of location-->

      <!-- destination -->
      <div class="autocomplete" style="width: 300px">
        <input
          id="myInput1"
          type="text"
          name="Destination"
          list="Destination"
          placeholder="الوجهة"
          class="form-control"
          required
        />
        <datalist id="Destination"> </datalist>
        <div class="invalid-feedback">برجاء تحديد الوجهة</div>
      </div>
      <!-- end Of destination -->

      <!-- Cost Or Time Or Distance-->
      <div class="radio">
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="inlineRadio1"
            value="option1"
          />
          <label class="form-check-label" for="inlineRadio1">السعر</label>
        </div>
        <!-- <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="inlineRadio2"
            value="option2"
          />
          <label class="form-check-label" for="inlineRadio2">الوقت</label>
        </div> -->
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="inlineRadio3"
            value="option3"
            required
          />
          <label class="form-check-label" for="inlineRadio3">المسافة</label>
        </div>
      </div>
      <!-- end of cost or time -->

      <!-- submit button -->
      <div class="ctrl-btn">
        <button class="btn btn-lg btn-primary result-btn">OK</button>
      </div>
      <!-- end of submit button  -->
    </form>
    <!-- bootstrap form -->

    <!-- end of bootstrap form -->
  </div>
  <!-- blind mode button -->
  <button class="blind-btn">
    <i class="fa-solid fa-person-walking-with-cane fa-2xl fa-beat"></i>
  </button>
  <!-- end of blind mode button -->
</div>
<!-- End Of main Section -->
<!-- client-side validation -->
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";
    window.addEventListener(
      "load",
      function () {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName("needs-validation");
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      },
      false
    );
  })();
</script>
